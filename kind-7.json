{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mattn.github.io/nostr-json-schemas/kind-7.json",
  "title": "Nostr Kind 7 Event (Reaction)",
  "description": "Reaction event as defined in NIP-25",
  "allOf": [
    {
      "$ref": "event.json"
    },
    {
      "properties": {
        "kind": {
          "const": 7
        },
        "content": {
          "type": "string",
          "description": "Reaction emoji (e.g., '+', '-', or other emoji)"
        }
      }
    }
  ],
  "definitions": {
    "eTag": {
      "type": "array",
      "description": "Tag 'e' representing the event being reacted to. Format: [\"e\", \"<event-id>\", ...]",
      "minItems": 2,
      "items": [
        {
          "type": "string",
          "const": "e"
        },
        {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$",
          "description": "32-bytes lowercase hex-encoded event ID"
        }
      ],
      "additionalItems": {
        "type": "string",
        "description": "Optional additional elements"
      }
    },
    "pTag": {
      "type": "array",
      "description": "Tag 'p' representing the pubkey of the event author being reacted to. Format: [\"p\", \"<pubkey>\", ...]",
      "minItems": 2,
      "items": [
        {
          "type": "string",
          "const": "p"
        },
        {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$",
          "description": "32-bytes lowercase hex-encoded public key"
        }
      ],
      "additionalItems": {
        "type": "string",
        "description": "Optional additional elements"
      }
    }
  }
}


